# ==============================================
# BOOKING SERVICE ENVIRONMENT CONFIGURATION
# ==============================================
# This file contains all environment variables needed for the booking service
# Copy this to .env and fill in the actual values

# ==============================================
# APPLICATION SETTINGS
# ==============================================
PROJECT_NAME=Booking Service
ENVIRONMENT=production
DOMAIN=your-domain.com
SECRET_KEY=your-super-secret-key-here-generate-a-new-one
ALGORITHM=HS256

# CORS Settings
BACKEND_CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# ==============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==============================================
# These will be auto-generated by Terraform, but you can override them
POSTGRES_SERVER=your-postgres-cluster-host.mdb.yandexcloud.net
POSTGRES_PORT=6432
POSTGRES_USER=your_db_username
POSTGRES_PASSWORD=your_db_password
POSTGRES_DB=booking_service

# ==============================================
# REDIS CONFIGURATION
# ==============================================
# Auto-generated by Terraform
REDIS_HOST=your-redis-cluster-host.mdb.yandexcloud.net

# ==============================================
# YANDEX OBJECT STORAGE (S3-compatible)
# ==============================================
S3_ENDPOINT_URL=https://storage.yandexcloud.net
S3_ACCESS_KEY_ID=your_s3_access_key
S3_SECRET_ACCESS_KEY=your_s3_secret_key
S3_BUCKET_STATIC=your-project-static
S3_BUCKET_UPLOADS=your-project-uploads
S3_REGION=ru-central1

# ==============================================
# EMAIL CONFIGURATION (SMTP)
# ==============================================
SMTP_HOST=smtp.yandex.ru
SMTP_PORT=587
SMTP_TLS=true
SMTP_SSL=false
SMTP_USER=your-email@yandex.ru
SMTP_PASSWORD=your_email_app_password
EMAILS_FROM_EMAIL=your-email@yandex.ru
EMAILS_FROM_NAME=Booking Service

# ==============================================
# FIRST SUPERUSER CONFIGURATION
# ==============================================
FIRST_SUPERUSER=admin@yourdomain.com
FIRST_SUPERUSER_PASSWORD=your_admin_password
USERS_OPEN_REGISTRATION=true

# ==============================================
# MESSAGE QUEUE (RabbitMQ/Message Queue)
# ==============================================
RABBIT_USER=your_rabbitmq_user
RABBIT_PASSWORD=your_rabbitmq_password
RABBIT_HOST=your-rabbitmq-host
RABBIT_PORT=5672

# ==============================================
# SERVER CONFIGURATION
# ==============================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
FRONTEND_HOST=your-frontend-host
FRONTEND_PORT=3000

# ==============================================
# LOAD BALANCER (Auto-filled by Terraform)
# ==============================================
LOAD_BALANCER_URL=https://your-load-balancer-url.com

# ==============================================
# MONITORING (Optional - for custom metrics)
# ==============================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==============================================
# TESTING
# ==============================================
EMAIL_TEST_USER=test@example.com
EMAIL_RESET_TOKEN_EXPIRE_HOURS=48
ACCESS_TOKEN_EXPIRE_MINUTES=11520
